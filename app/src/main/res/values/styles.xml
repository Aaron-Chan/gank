<resources>

    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="bottomNavigationBackground">@android:color/white</item>
        <item name="bottomNavigationItem">@color/bottom_navigation_color</item>
    </style>

    <style name="AppTheme" parent="DayTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="NightBaseTheme" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/night_colorPrimary</item>
        <item name="colorPrimaryDark">@color/night_colorPrimaryDark</item>
        <item name="colorAccent">@color/night_colorAccent</item>
        <!--不要toolbar-->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowBackground">@color/night_contentItemBackground</item>
        <item name="android:textColorPrimary">@color/night_contentItemBacTextColor</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:colorBackground">@color/md_grey_800</item>
        <item name="bottomNavigationBackground">?colorPrimary</item>
        <item name="bottomNavigationItem">@color/bottom_navigation_color_night</item>
    </style>

    <style name="NightTheme" parent="NightBaseTheme">
    </style>

    <style name="uiouio" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_btn_colored_borderless_text_material</item>
    </style>

</resources>
